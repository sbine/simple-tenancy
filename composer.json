{
    "name": "sbine/simple-tenancy",
    "description": "Simple Laravel multi-tenancy in the same database",
    "keywords": [
        "multi",
        "tenancy",
        "laravel",
        "simple"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sara Bine",
            "email": "sara@sarabine.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": ">=9.0"
    },
    "require-dev": {
        "orchestra/testbench": ">=7.0"
    },
    "autoload": {
        "psr-4": {
            "Sbine\\Tenancy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sbine\\Tenancy\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sbine\\Tenancy\\TenancyProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}